"""
Mutation testing configuration for Blind Date.
Run: mutmut run
"""

SKIP_CONSTANTS = True

def should_mutate(context):
    """Skip mutation for logging and config."""
    if 'logger' in context.line:
        return False
    if 'DEBUG' in context.line or 'INFO' in context.line:
        return False
    if context.filename.endswith('config.py'):
        return False
    return True

